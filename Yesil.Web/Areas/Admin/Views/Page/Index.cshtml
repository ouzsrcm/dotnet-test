@model IEnumerable<Yesil.Data.Page>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>Sayfalar</h3>
<table class="table">
    <tr>
        <th>
            Sayfa adı
        </th>
        <th>
            Başlık
        </th>
        <th>
            Anahtar kelimeler
        </th>
        <th>
            Açıklama
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Keyword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.PageId })
            </td>
        </tr>
    }
</table>
