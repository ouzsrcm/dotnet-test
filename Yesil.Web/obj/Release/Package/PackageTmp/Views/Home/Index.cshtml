@{
    ViewBag.Title = "Anasayfa";
}

<div id="layerslider" style="width: 1130px; height:300px; margin:0px auto;">
    <div class="ls-slide" data-ls="slidedelay:4500; transition2d:25;">
        <img src="/assets/img/bg/1.jpg" class="ls-bg" alt="Slide background" />
    </div>
    <div class="ls-slide" data-ls="slidedelay:4500; transition2d:25;">
        <img src="/assets/img/bg/2.jpg" class="ls-bg" alt="Slide background" />
    </div>
    <div class="ls-slide" data-ls="slidedelay:4500; transition2d:25;">
        <img src="/assets/img/bg/3.jpg" class="ls-bg" alt="Slide background" />
    </div>
</div>

<div class="call-action-v1 bg-color-light">
    <div class="container">
        <div class="call-action-v1-box">
            <div class="call-action-v1-in">
                <p>
                    İnternet sitemiz üzerinden online alışveriş yapabilirsiniz!
                </p>
            </div>
            <div class="call-action-v1-in inner-btn page-scroll">
                <a href="/Products" class="btn-u btn-brd btn-brd-hover btn-u-dark btn-u-block">ALIŞVERİŞE BAŞLA</a>
            </div>
        </div>
    </div>
</div>

<div class="container content">
    <div class="margin-bottom-10"></div>
    <!-- Recent Works -->
    <div class="owl-carousel-v1 owl-work-v1 margin-bottom-40">
        <div class="headline">
            <h2 class="pull-left">Tesislerimiz</h2>
            <div class="owl-navigation">
                <div class="customNavigation">
                    <a class="owl-btn prev-v2" style="visibility:hidden;"></a>
                    <a class="owl-btn next-v2" style="visibility:hidden;"></a>
                </div>
            </div><!--/navigation-->
        </div>
        <div class="owl-recent-works-v1">
            @foreach (var item in ViewBag.Facilities)
            {
                <div class="item">
                    <a href="/Facilities/Details/@item.FacilityId">
                        <em class="overflow-hidden">
                            <img class="img-responsive" src="@item.Image" alt="@item.Title">
                        </em>
                        <span>
                            <strong>@item.Title</strong>
                            <i>@item.Description</i>
                        </span>
                    </a>
                </div>
            }
        </div>
    </div>
    <!-- End Recent Works -->
    <!-- Info Blokcs -->
    <div class="row margin-bottom-20">
        <!-- Welcome Block -->
        <div class="col-md-8 md-margin-bottom-40">
            <div class="headline"><h2>YSL TARIM DIŞ TİCARET A.Ş.</h2></div>
            <div class="row">
                <div class="col-sm-4">
                    <img class="img-responsive margin-bottom-20" src="/assets/img/main/img12.jpg" alt="">
                </div>
                <div class="col-sm-8">
                    <p>
                        Üretilen ürünlerimiz tamamen doğal ortamlarda yetişmektedir. Sektöre yıllarını vermiş ve kendini adamış firmamız, doğallığın ve tazeliğin aranan adresi olmayı başarmıştır.
                    </p>
                    <ul class="list-unstyled margin-bottom-20">
                        <li><i class="fa fa-check color-green"></i> %100 Doğal</li>
                        <li><i class="fa fa-check color-green"></i> %100 Yerli Üretim</li>
                        <li><i class="fa fa-check color-green"></i> %100 En iyi fiyat garantisi</li>
                        <li><i class="fa fa-check color-green"></i> %100 Müşteri memnuniyeti</li>
                    </ul>
                </div>
            </div>
            <blockquote class="hero-unify">
                <small><strong>Sizleride bekleriz...</strong></small>
            </blockquote>
        </div><!--/col-md-8-->
        <!-- Latest Shots -->
        <div class="col-md-4 md-margin-bottom-20">
            <div class="headline"><h2>Firmamızdan haberler</h2></div>
            <div id="myCarousel" class="carousel slide carousel-v1">
                <div class="carousel-inner">
                    @{ bool _stat = true;}
                    @foreach (var item in ViewBag.News)
                    {
                        <div class="item @if(_stat) { <text>active</text> }">
                            <img src="@item.Image" alt="@item.Title">
                            <div class="carousel-caption">
                                <p>@item.Title</p>
                            </div>
                        </div>
                                         _stat = false;
                    }
                </div>
                <div class="carousel-arrow">
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>