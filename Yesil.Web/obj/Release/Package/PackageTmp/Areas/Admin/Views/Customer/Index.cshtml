@model IEnumerable<Yesil.Data.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>Müşteriler</h3>

<table class="table">
    <tr>
        <th>
            Adı
        </th>
        <th>
            Soyadı
        </th>
        <th>
            Eposta adresi
        </th>
        <th>
            Cep Telefonu
        </th>
        <th>
            Sabit Telefon
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone2)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.CustomerId }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.CustomerId })
            </td>
        </tr>
    }

</table>
