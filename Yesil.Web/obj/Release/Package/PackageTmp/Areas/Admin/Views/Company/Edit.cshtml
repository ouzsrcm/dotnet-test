@model Yesil.Data.Company

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>Firma bilgileri düzenle</h3>

@using (Html.BeginForm("Edit", "Company", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.Title</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CompanyId)
        <input type="hidden" name="IsDefault" id="IsDefault" value="true" />

        <div class="form-group">
            <div class="control-label col-md-2">Başlık</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Adres</div>
            <div class="col-md-10">
                <textarea id="Address" name="Address">@Model.Address</textarea>
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                <script>
                    $(document).ready(function () {
                        $("#Address").summernote();
                    });
                </script>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Email</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Telefon 1</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Phone1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Telefon 2</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone2, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Phone2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Web sitesi</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Website, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Çalışma Saatleri</div>
            <div class="col-md-10">
                <textarea id="BussinesHours" name="BussinesHours">@Model.BussinesHours</textarea>
                @Html.ValidationMessageFor(model => model.BussinesHours, "", new { @class = "text-danger" })
                <script>
                    $(document).ready(function () {
                        $("#BussinesHours").summernote();
                    });
                </script>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Faks</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fax, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fax, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Kısaca Hakkımızda</div>
            <div class="col-md-10">
                <textarea id="Description" name="Description">@Model.Description</textarea>
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                <script>
                    $(document).ready(function () {
                        $("#Description").summernote();
                    });
                </script>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}