@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kullanıcı Yetkilendirme</title>
    <link href="~/assets/admin/css/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/admin/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/assets/admin/css/style.css" rel="stylesheet" />
</head>
<body>

    <div class="login-content center-block">
        <div class="row well-lg">
            <div class="col-md-12">
                <h3>Kullanıcı yetkilendirme</h3>
                <hr />
                <form class="form-horizontal" action="/Admin/Login" method="post">
                    <div class="form-group">
                        <label for="Username" class="col-sm-2 control-label">Kullanıcı Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Username" name="Username" placeholder="Kullanıcı Adı">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Password" class="col-sm-2 control-label">Parola</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Parola">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary pull-right">Giriş yap</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/assets/admin/js/bootstrap.js"></script>
    <script src="~/assets/admin/js/jquery-1.12.4.min.js"></script>
</body>
</html>
