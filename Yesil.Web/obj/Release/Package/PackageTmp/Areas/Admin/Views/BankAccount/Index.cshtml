@model IEnumerable<Yesil.Data.BankAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>Banka hesapları</h3>

<p>
    @Html.ActionLink("Yeni ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Başlık
        </th>
        <th>
            Resim
        </th>
        <th>
            Hesap numarası
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <img src="@item.Image" style="width:100px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.BankAccountId }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.BankAccountId })
            </td>
        </tr>
    }

</table>
